@model RegesterModel;
<div class="container bg-[url('/Image/bgg.png')] sm:h-full md:h-dvh lg:h-full w-full">
    <div class="flex justify-center  w-full md:h-6/7   ">
        <div class="h-full  lg:w-1/3 md:w-full sm:w-full px-16 mt-10 bg-slate-50/[0.8] items-center">
            <div class="border-b border-gray-900/10">
                <form method="post" asp-controller="User" asp-action="Regester">
                <h2 class="text-base font-semibold leading-7 text-gray-900">Personal Information</h2>
 
                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                        <div asp-validation-summary="ModelOnly"></div>

                    <div class="sm:col-span-full">
                            <label for="first-name" class="block sm:text-sm md:text-base lg:text-lg font-medium leading-6 text-gray-900">  name</label>
                        <div class="mt-2">
                            <input asp-for="Name"   class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                        <div class="sm:col-span-full">
                            <label for="first-name" class="block sm:text-sm md:text-base lg:text-lg font-medium leading-6 text-gray-900">  UserName</label>
                            <div class="mt-2">
                                <input asp-for="UserName" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                            </div>
                        </div>

                    <div class="sm:col-span-full">
                        <label for="email" class="sm:text-sm md:text-base lg:text-lg block text-sm font-medium leading-6 text-gray-900">Email address</label>
                        <div class="mt-2">
                            <input asp-for="Email" id="email" name="email" type="email" autocomplete="email" class="block w-full   rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <span asp-validation-for="Email" class="alert-danger"></span>
                            </div>
                    </div>

                    

                    <div class="sm:col-span-full">
                            <label for="street-address" class="block sm:text-sm md:text-base lg:text-lg font-medium leading-6 text-gray-900">Phone</label>
                        <div class="mt-2">
                            <input asp-for="Phone" type="text"   id="street-address" autocomplete="street-address" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <span asp-validation-for="Phone" class="alert-danger"></span>

                        </div>
                    </div>
                        <div class="sm:col-span-full">
                            <label for="street-address" class="block sm:text-sm md:text-base lg:text-lg font-medium leading-6 text-gray-900">Password</label>
                            <div class="mt-2">
                                
                                <input asp-for="Password" type="text" id="street-address" autocomplete="street-address" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <span asp-validation-for="Password" class="alert-danger"></span>

                            </div>
                        </div>
                        <div class="sm:col-span-full">
                            <label for="street-address" class="block sm:text-sm md:text-base lg:text-lg font-medium leading-6 text-gray-900">Confairm Password</label>
                            <div class="mt-2">
                                <input asp-for="ConfarmPassword" type="text" id="street-address" autocomplete="street-address" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <span asp-validation-for="ConfarmPassword" class="alert-danger"></span>

                            </div>
                        </div>

                </div>
                <div class=" m-3 sm:col-span-full flex justify-content-center">
                    <button class="  btn bg-emerald-400">Regester</button>
                </div>
                </form>
            </div>

        </div>
    </div>


</div>